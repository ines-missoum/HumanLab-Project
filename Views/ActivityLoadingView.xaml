<Page
    x:Class="humanlab.Views.ActivityLoadingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:humanlab.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:humanlab.ViewModels"
    xmlns:m="using:humanlab.Helpers.Models"
    xmlns:h="using:humanlab.Helpers.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:ActivityLoadingViewModel x:Name="tobii"/>
    </Page.DataContext>

    <Page.Resources>
        <!--converter to retrieve image path-->
        <h:ImageNameToImageUriConverter x:Key="ImageNameToImageUriConverter"></h:ImageNameToImageUriConverter>
    </Page.Resources>
    
    <Grid >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <GridView  ItemsSource="{x:Bind tobii.Elements, Mode=TwoWay}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="m:ElementOfActivity">
                        <StackPanel  VerticalAlignment="Center" Margin="50" Height="430" Width="430">
                            <ProgressBar 
                     Value="{x:Bind FocusTime, Mode=TwoWay}" 
                     Maximum="{x:Bind MaxFocusTime}" 
                     Visibility="{Binding IsNotAnimated, Mode=TwoWay}"
                     Margin="0,12" 
                     Height="20"/>
                            
                            <Button Command="{Binding ClickImage}"
                     CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"
                     x:Name="clickButton"
                     Height="325" 
                     Width="430"                    
                >
                                <Button.Content>
                                    <Image Tag="{Binding Element.ElementId}" Stretch="Fill">
                                        <Image.Source>
                                            <BitmapImage 
                                                UriSource="{Binding Element.Image, Converter={StaticResource ImageNameToImageUriConverter}}"
                                                AutoPlay="False" 
                                            />
                                        </Image.Source>
                                    </Image>
                                </Button.Content>

                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

        </StackPanel>

        <Canvas x:Name="gazePositionCanvas">
            <Ellipse 
                    x:Name="eyeGazePositionEllipse"
                    Width="20" Height="20"
                    Fill="Black" 
                    Opacity="0.5" 
                    Visibility="Visible"
                RenderTransform="{Binding Transform}"
                >
            </Ellipse>
        </Canvas>
    </Grid>
</Page>
